<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/indent_16">

        <TextView
            android:id="@+id/textViewEpisodeIdAndName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_mono"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="#28 The Ricklantis Mixup" />

        <TextView
            android:id="@+id/textViewEpisodeAirDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_4"
            tools:text="September 10, 2017" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>